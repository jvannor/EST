<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:utilities="clr-namespace:Mobile.Utilities"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}"
    utilities:ViewModelLocator.AutoWireViewModel="True"
    x:Class="Mobile.Views.ReportsView">
    <ContentPage.Content>
        <StackLayout Margin="16,8,16,0">
            <Button Text="Test" Command="{Binding TestCommand}"/>
            <RefreshView
                IsRefreshing="{Binding IsRefreshing}"
                Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding Reports}"
                                EmptyView="No items to display"
                                RemainingItemsThreshold="10"
                                RemainingItemsThresholdReachedCommand="{Binding LoadMoreDataCommand}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Text="{Binding Id}" FontAttributes="Bold" />
                                <Label Grid.Row="1" Text="{Binding Created}" />
                                <Label Grid.Row="2" Text="{Binding Category}" />
                                <Label Grid.Row="3" Text="{Binding Subcategory}" />
                                <Label Grid.Row="4" Text="{Binding Detail}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
