<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:utilities="clr-namespace:Mobile.Utilities"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    utilities:ViewModelLocator.AutoWireViewModel="True"
    Title="{Binding Title}"
    x:Class="Mobile.Views.SettingsView">
    <ContentPage.Content>
        <StackLayout Margin="16,8,16,0">
            <Label Text="Epilepsy Seizure Tracker" FontSize="Medium"/>
            <BoxView HeightRequest="8"/>

            <Label Text="Version" FontSize="Small"/>
            <Entry Text="1" IsReadOnly="True"/>
            <BoxView HeightRequest="8"/>

            <Label Text="User" FontSize="Small"/>
            <Entry Text="{Binding UserName}" IsReadOnly="True"/>
            <BoxView HeightRequest="8"/>

            <Frame BorderColor="{StaticResource DarkPrimaryColor}" HasShadow="False" Padding="8,4,8,4">
                <Label Text="Logout" HorizontalOptions="Center" FontSize="Medium">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LogoutCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
