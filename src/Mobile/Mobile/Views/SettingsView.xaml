<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:utilities="clr-namespace:Mobile.Utilities"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    utilities:ViewModelLocator.AutoWireViewModel="True"
    Title="{Binding Title}"
    x:Class="Mobile.Views.SettingsView">
    <ContentPage.Content>
        <StackLayout Margin="16,8,16,0">
            <Label Text="Settings"/>
            <Button Text="Logout" Command="{Binding LogoutCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
