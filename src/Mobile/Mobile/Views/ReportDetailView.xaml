<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:utilities="clr-namespace:Mobile.Utilities"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}"
    utilities:ViewModelLocator.AutoWireViewModel="True"
    x:Class="Mobile.Views.ReportDetailView">
    <ContentPage.Content>
        <StackLayout Margin="16,8,16,0">
            <Label Text="Report Detail" />
            <Label Text="Date" />
            <DatePicker Date="{Binding Date}" />
            <Label Text="Time" />
            <TimePicker Time="{Binding Time}" />
            <Label Text="Category" />
            <Picker Title="Category" ItemsSource="{Binding CategoryChoices}" SelectedItem="{Binding Category}" />
            <Label Text="Subcategory" />
            <Picker Title="Subcategory" ItemsSource="{Binding SubcategoryChoices}" SelectedItem="{Binding Subcategory}" />
            <Label Text="Detail"/>
            <Picker Title="Detail" ItemsSource="{Binding DetailChoices}" SelectedItem="{Binding Detail}" />
            <Label Text="Description" />
            <Editor Placeholder="Enter description here." Text="{Binding Description}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
